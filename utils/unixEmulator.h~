#include <sys/types.h>
#include <unistd.h>
#include <dirent.h>
#include <stdio.h>
#include <string.h>
#include <sys/wait.h>

void ls(int, char*);

int main(int argc,char *argv[]) {
    processid();
    ls(argc,argv[1]);
    //exit(0);
}

void ls(int para_count,char *dir) {
	DIR *dp;
	struct dirent *dirp;

	if (para_count != 2)
		printf( "a single argument (the directory name) is required ");

	if ( (dp = opendir(dir)) == NULL)
		printf( "can 't open %s ",dir);

	while ( (dirp = readdir(dp)) != NULL)
		printf( "%s\n ",dirp-> d_name);

	closedir(dp);
} 
